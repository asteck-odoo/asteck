  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="infile_view_company_form">
      <field name="inherit_id" ref="base.view_company_form"/>
      <field name="model">res.company</field>
      <field name="arch" type="xml">
        <field name="sequence" position="after">
        </field>
        <xpath expr="//notebook" position="inside">

          <page string="ConfiguraciÃ³n de Infile">
            <group>
              <group>
                <field name="usuariofirma"/>
                <field name="keyfirma"/>
                <field name="usuariocert"/>
                <field name="keycert"/>
                <field name="establecimientofe"/>
                <field name="idmaquinafe"/>
              </group>
            </group>
          </page>
        </xpath>
      </field>
    </record>

    <record model="ir.ui.view" id="infile_invoice_form">
      <field name="inherit_id" ref="account.view_move_form"/>
      <field name="model">account.move</field>      
      <field name="arch" type="xml">
        <field name="partner_id" position="after">
           
        </field>
        <xpath expr="//notebook" position="inside">
          <page string="Datos Infile">
            <group>
              <field name="xmlfactura"/>
              <field name="archivofirmado"/>
              <field name="archivocodificado"/>
              <field name="json_data"/>
              
            </group>
             <group>
				<field name="fechacertificacion"/>
              	<field name="archivocertificado"/>
              	<field name="numero"/>
              	<field name="serie"/>
              	<field name="firmaelectronica"/>
              	<field name="certificacion_json"/>
             </group>
             <group>
             <field name="xmlfacturaanular"/>
             <field name="codificado_anular"/>
             <field name="archivofirmadoanulado" string="archivo firmado primer web service" />
             <field name="anulacion_json" string="primer web service"/>
             <field name="resultadoanulacion" string="segundo web service" />
              <field name="serie_anulacion"/>
              <field name="firma_anulacion"/>
              <field name="numero_anulacion"/>
              <field name="archivo_anulacion"/>
              
             </group>
          </page>
        </xpath>
      </field>            
    </record>
